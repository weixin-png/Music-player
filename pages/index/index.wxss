/* 引入骨架屏样式 */
@import "./index.skeleton.wxss";

.header {
    display: flex;
    justify-content: space-between;
    height: 40px;
    font-size: 13px;
    align-items: center;
}
.avator-box {
    display: flex;
    align-items: center;
    text-align: center;

}
.user-avatar-box{
    width: 30px;
    height: 30px;
    margin-right: 5px;
    
}
.user-avatar {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    /* background-color: pink; */
    
}

.nickname {
    color: #ccc;
}

.login-btn{
    width: 70px;
    height: 25px;
    line-height: 25px;
    border-radius: 18px;
    text-align: center;
    border: 1px solid #ccc;
}






/* banner区域 */
.banner-image {
    width: 100%;
    margin: 15px 0 2px;
}